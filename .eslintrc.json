{
  "extends": ["next", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "rules": {
    // off
    "react-hooks/rules-of-hooks": 0,
    "react-hooks/exhaustive-deps": 0,
    "react/display-name": 0,
    "jsx-a11y/alt-text": 0,

    // warning
    "no-unused-vars": 1,

    // error
    "no-console": 2,
    "prettier/prettier": 2
  }
}
